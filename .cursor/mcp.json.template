{
  "mcpServers": {
    // Context7 MCP - Enhanced context management (no API key required)
    "context7": {
      "command": "npx -y @upstash/context7-mcp",
      "env": {},
      "args": []
    },

    // GitHub MCP - Manage repositories, commits, PRs, and issues
    // Get your token at: https://github.com/settings/tokens
    "github": {
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "YOUR_GITHUB_TOKEN_HERE"
      }
    },

    // Angular CLI MCP - Execute Angular CLI commands (no API key required)
    // Usage: "Generate a new component called user-profile"
    "angular-cli": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@angular/cli", "mcp"]
    },

    // Kendo UI Generator - Generate professional Kendo UI components
    // Get your free trial key at: https://www.telerik.com/mcp-servers
    // Click "Get Access code" and sign in (no credit card required)
    "kendo_ui_generator": {
      "type": "sse",
      "url": "https://uiagent.mcp.telerik.com/mcp/angular",
      "headers": {
        "x-api-key": "YOUR_KENDO_API_KEY_HERE"
      }
    }
  }
}
